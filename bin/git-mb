#!/usr/bin/env bash
# git mb: Make Branch with the provided arguments

set -eu -o pipefail

if [[ $# -eq 0 ]]; then
    echo 'Usage: git mb BRANCH_NAME_WORDS...'
    exit 1
fi

slug=$(sed -E -e 's/[^A-Za-z0-9_]+/-/g' <<< "$*")
user=$(git config user.email)
git checkout -b "${user%%@*}/$(date +%Y%m%d)-$slug"
