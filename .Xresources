!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!! Emacs

Emacs.font:		7x13
Emacs.reverseVideo:	true

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!! Rofi

rofi.color-enabled:	true
rofi.color-window:	#000, #0f0, #0c0
rofi.color-normal:	#000, #0f0, #000, #060, #0f0
rofi.color-active:	#000, #ff0, #000, #060, #ff0
rofi.color-urgent:	#000, #f60, #000, #060, #f60
rofi.fake-transparency:	true
rofi.levenshtein-sort:	true
rofi.separator-style:	solid

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!! (U)Rxvt

! basics
Rxvt.termName:		rxvt-256color
Rxvt.font:		7x13
Rxvt.geometry:		160x60+50+50
Rxvt.scrollstyle:	plain
Rxvt.scrollBar_right:	true

! colors
Rxvt.background:	black
Rxvt.foreground:	grey
Rxvt.color4:		#33f
Rxvt.color12:		#66f
Rxvt.colorBD:		white
Rxvt.colorUL:		dark cyan

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!! XTerm

! basics
XTerm*font:		7x13
XTerm*background:	black
XTerm*foreground:	grey
XTerm*geometry:	160x60+50+50

! bold by color
XTerm*boldMode:	false
XTerm*boldFont:	7x13
XTerm*colorBDMode:	true
XTerm*colorBD:		white

! Cygwin-style
XTerm*colorULMode:	true
XTerm*colorUL:		dark cyan

! misc
XTerm*metaSendsEscape:	true
XTerm*rightScrollBar:	true
XTerm*saveLines:	10000
XTerm*scrollBar:	true
XTerm*toolBar:		false

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!! local settings

#include ".Xresources-local"
