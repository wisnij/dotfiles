#!/usr/bin/env bash
# git remaster: REbase onto freshly fetched MASTER

set -eu

branch=$(git branch --show-current)
if [[ -z $branch ]]; then
    echo "Can't rebase from detached HEAD state"
    exit 1
elif [[ $branch == 'master' || $branch == 'main' ]]; then
    echo "Already on '$branch'" >&2
    exit 1
fi

echo "on branch $branch"

orig_commit=$(git rev-parse HEAD)
echo "original commit: $orig_commit"

master='master'
if git show-ref --verify --quiet refs/heads/main; then
    master='main'
fi

echo
(
    set -x
    git checkout $master
    git pull --rebase
    git checkout $branch
    git rebase --verbose "$@" $master
    git submodule update
)
echo

new_commit=$(git rev-parse HEAD)
echo "current commit: $new_commit"
