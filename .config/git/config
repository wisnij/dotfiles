[alias]
	branch-delete = "!f(){ git branch -d ${1} && git push origin --delete ${1}; };f"
	changes = log --pretty=oneline-isodate
	difflast = diff HEAD~1 HEAD
	diffs = diff --staged
	files = "!f(){ git ls-files \"$@\" | sort; };f"
	graph = log --graph --branches --pretty=oneline-date --date=relative --date-order
	history = log -p
[color "diff"]
	commit = bold yellow
	frag = yellow
	new = cyan
	old = red
	plain = bold black
[color "diff-highlight"]
	newHighlight = cyan 19
	newNormal = cyan
	oldHighlight = red 52
	oldNormal = red
[color]
	ui = always
[core]
	pager = less
[pager]
	diff = diff-highlight | less
	history = diff-highlight | less
[pretty]
	oneline-date = tformat:"%C(yellow)%h%Creset %C(cyan)%cd%Creset %C(magenta)%cn%Creset %s%C(auto)%d"
	oneline-isodate = tformat:"%C(yellow)%h%Creset %C(cyan)%ci%Creset %C(magenta)%cn%Creset %s%C(auto)%d"
[push]
	default = simple
[status]
	showUntrackedFiles = no
[user]
	email = wisnij@gmail.com
	name = Jim Wisniewski
[include]
	path = config-local
