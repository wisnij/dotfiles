[alias]
	branch-delete = "!f(){ git branch -d ${1} && git push origin --delete ${1}; };f"
	changes = log --pretty=oneline-isodate
	difflast = diff HEAD~1 HEAD
	diffs = diff --staged
	d  = diff --patch --stat --ignore-space-change --ignore-space-at-eol
	ds = diff --patch --stat --ignore-space-change --ignore-space-at-eol --staged
	fa = fetch --all
	files = "!f(){ git ls-files \"$@\" | sort; };f"
	gg = "!f(){ git ls-files | sort | xargs grep -E \"$@\"; };f"
	graph = log --graph --pretty=oneline-date --date=relative --date-order
	g     = log --graph --pretty=oneline-date --date=relative --date-order --all
	history = log -p --ignore-space-change --ignore-space-at-eol
	puff = pull --ff --ff-only
	s = show --patch --stat --ignore-space-change --ignore-space-at-eol
[color "diff"]
	commit = bold yellow
	frag = yellow
	new = cyan
	old = red
	plain = bold black
[color "diff-highlight"]
	newHighlight = cyan 19
	newNormal = cyan
	oldHighlight = red 52
	oldNormal = red
[color]
	ui = always
[core]
	pager = less
[merge]
	ff = false
[pager]
	branch = false
	diff = diff-highlight | less
	history = diff-highlight | less
[pretty]
	oneline-date = tformat:"%C(yellow)%h%Creset %C(cyan)%cd%Creset %C(magenta)%an%Creset %s%C(auto)%d"
	oneline-isodate = tformat:"%C(yellow)%h%Creset %C(cyan)%ci%Creset %C(magenta)%an%Creset %s%C(auto)%d"
[pull]
	ff = only
[push]
	default = simple
[status]
	showUntrackedFiles = no
[user]
	email = wisnij@gmail.com
	name = Jim Wisniewski
[include]
	path = config-local
