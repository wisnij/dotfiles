[user]
	name = Jim Wisniewski
	email = wisnij@gmail.com
[push]
	default = simple
[alias]
	diffs = diff --staged
	graph = "!git log --graph --branches --pretty=tformat:\"%C(yellow)%h%Creset %C(cyan)%ad%Creset %s%C(auto)%d\" --date=relative | less"
	trypull = "!git fetch -v; git whatchanged ..origin/common --pretty=format:\"%C(yellow)%h%Creset [%C(cyan)%ar%Creset] %s\" --reverse"
	branch-delete = "!f(){ git branch -d ${1} && git push origin --delete ${1}; };f"
	difflast = diff HEAD~1 HEAD
[core]
	pager = cat
[color]
	ui = always
[include]
	path = ~/.config/git/config-local
[status]
	showUntrackedFiles = no
[color "diff"]
	old = red
	new = cyan
	frag = yellow
	plain = bold black
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red 52
	newNormal = cyan
	newHighlight = cyan 19
[pager]
	diff = diff-highlight | less
[merge]
	ff = false
