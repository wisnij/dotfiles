[alias]
	a = add --verbose
	branch-delete = "!f(){ git branch --delete --force ${1}; git push origin --delete ${1}; };f"
	changes = log --pretty=oneline-date --date=iso-local
	co = checkout
	cof = !git for-each-ref --format='%(refname:short)' refs/heads | fzf | xargs git checkout
	difflast = diff HEAD~1 HEAD
	diffs = diff --staged
	dir = "!f(){ echo $GIT_DIR; }"
	d  = diff --patch --compact-summary --ignore-space-change --ignore-space-at-eol
	ds = diff --patch --compact-summary --ignore-space-change --ignore-space-at-eol --staged
	fa = fetch --all
	files = "!f(){ git ls-files \"$@\" | sort; };f"
	gg = "!f(){ git ls-files | sort | xargs grep -E \"$@\"; };f"
	graph = log --graph --pretty=oneline-date --date=relative --date-order
	g     = log --graph --pretty=oneline-date --date=relative --date-order --all
	land = merge --squash --ff
	history = log --patch  --compact-summary --ignore-space-change --ignore-space-at-eol --pretty=fuller-compact
	hf = log --patch  --compact-summary --ignore-space-change --ignore-space-at-eol --pretty=fuller-compact --follow
	hm = history master..
	my-changes = changes --author wisnij@gmail.com
	my-history = history --author wisnij@gmail.com
	puff = pull --ff --ff-only
	pt = push --set-upstream
	s = show --patch --compact-summary --ignore-space-change --ignore-space-at-eol --pretty=fuller-compact
	stashed = !git stash list --patch --color | diff-highlight | less-find-pattern "^stash@.*"
	update = add --update --verbose
[blame]
	coloring = repeatedLines
[branch]
	autoSetupRebase = always
[color "diff"]
	commit = bold yellow
	frag = yellow
	new = cyan
	old = red
	plain = dim
[color "diff-highlight"]
	newHighlight = cyan 19
	newNormal = cyan
	oldHighlight = red 52
	oldNormal = red
[color]
	ui = auto
[color.grep]
	filename = magenta
[commit]
	gpgSign = true
	verbose = true
[core]
	pager = cat
[init]
	defaultBranch = master
[merge]
	ff = false
[pager]
	blame = less
	branch = false
	changes = less
	diff = diff-highlight | less-find-pattern "^diff"
	g = less
	graph = less
	history = diff-highlight | less-find-pattern "^commit\\ [0-9a-f]+"
	hf = diff-highlight | less-find-pattern "^commit\\ [0-9a-f]+"
	show = diff-highlight | less-find-pattern "^diff"
[pretty]
	fuller-compact = format:"%C(bold yellow)commit %H%Creset%C(auto)%d%nAuthor:    %aN <%aE>, %ad%nCommitter: %cN <%cE>, %cd%n%n%w(0,4,4)%B"
	oneline-date = tformat:"%C(yellow)%h%Creset %C(cyan)%cd%Creset %C(magenta)%aN%Creset %s%C(auto)%d"
[protocol]
	version = 2
[pull]
	ff = only
	rebase = true
[push]
	gpgSign = if-asked
	default = current
[rebase]
	autoSquash = true
[rerere]
	enabled = true
[status]
	showUntrackedFiles = all
[tag]
	gpgSign = true
[user]
	email = wisnij@gmail.com
	name = Jim Wisniewski
	signingKey = 88FCEA8D986E4990
[include]
	path = config-local
