altscreen on
shell /bin/bash
startup_message off
vbell off
verbose on

# Avoid colliding with C-a in Emacs
escape ^Oo

bind \\ quit
bind ^\ quit

# 1-indexed screens
bind c screen 1
bind ^c screen 1
bind 0 select 10

# I never lock the screen on purpose -_-
bind x
bind ^x

# prettier status line
hardstatus alwayslastline "%{= BW} [%H] %{+r dd}  %?%-Lw%?%{+ .W}%n+%f %t%? (%u)%?%{-}%?%+Lw%? %=%{-} %l @ %Y-%m-%d %0c "

screen 1
